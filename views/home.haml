:css
	body
	{
		background-color:transparent !important;
	}
	body > div > div:last-child
	{
		width:0px;
		height:0px;
		border:none;
		background-color:transparent;
	}
	@keyframes slidy
	{
		0% { left: 0%; }
		20% { left: 0%; }
		25% { left: -100%; }
		45% { left: -100%; }
		50% { left: -200%; }
		70% { left: -200%; }
		75% { left: -300%; }
		95% { left: -300%; }
		100% { left: -400%; }
	}
	div#slider { overflow: hidden; width:100vw; height:100vh; position:fixed;left:0px;top:0px; z-index:-1;  }
	div#slider figure > div { width: 20%; float: left; height:100%; }
	div#slider figure > div > img { width: 100%; object-fit:cover; object-position:0% 0%; height:100%; }
	div#slider figure > div > div { z-index:1; position:relative;top:100px;left:30px; margin-bottom:-500px; height:500px; float:left; }
	div#slider figure
	{
	    position: relative;
	    width: 500%;
	    margin: 0;
	    left: 0;
	    text-align: left;
	    animation: 30s slidy infinite;
	    height:100%;
	    text-shadow: 0px 0px 4px rgba(255, 255, 255, 1), 0px 0px 6px rgba(255, 255, 255, 1), 0px 0px 8px rgba(255, 255, 255, 1);
	}
	#slider-container
	{
		position:absolute; left:0px; width:100%;
	}
#slider-container
	#slider
		%figure
			- slides.each do |slide|
				%div
					%div
						%h1
							= slide[:header]
						= slide[:body]
					%img(src="#{slide[:image]}")